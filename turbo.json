{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "types:check": {
      "dependsOn": ["^types:check"]
    },
    "lint:pub": {
      "dependsOn": ["build", "^lint:pub"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
